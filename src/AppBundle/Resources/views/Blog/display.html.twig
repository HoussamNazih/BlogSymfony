{% extends 'base.html.twig' %}

{% block crud %}


<div class="container">
        <div class="col-md-12   col-md-offset-4">

	{% if posts is empty %}

	<p> vous n'avez ecris any post </p>

    {% else %}

	<table class="table">
       <thead class="thead-dark">
		<tr>
			<th>Titre</th>
			<th>Commentaires</th>
			<th>Actions</th>
		</tr>
	{% for post in posts %}
		<tr>
			<td>
				{{post.titre}}
			</td>
			<td>
				10
			</td>
			<td>
				<a href="/blog/{{ post.id }}" class="btn btn-info">View</a>
				<a href="/edit/{{ post.id }}" class="btn btn-primary">Edit</a>
				<a href="/delete/{{ post.id }}" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	{% endfor %}
	</table>

	{% endif %}

	</div>
	</div>

{% endblock %}