{% extends 'base1.html.twig' %}

{% block crud %}


<div class="container">
        <div class="col-md-12   col-md-offset-4">

	{% if posts is empty %}

          <br>
          <br>

          <p class="center" >
          <div  class="alert alert-primary" role="alert">
         Vous n'avez aucun Poste ! <a href="/newPost" > Publier un poste </a>
          </div>
          </p>

    {% else %}

	<table class="table">
       <thead class="thead-dark">
		<tr>
			<th>Titre</th>
			<th>Commentaires</th>
			<th>Actions</th>
		</tr>
	{% for post in posts %}
		<tr>
			<td>
				{{post.titre}}
			</td>
			<td>
				10
			</td>
			<td>
				<a href="/post/{{ post.id }}" class="btn btn-info">View</a>
				<a href="/edit/{{ post.id }}" class="btn btn-primary">Edit</a>
				<a href="/delete/{{ post.id }}" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	{% endfor %}
	</table>

	{% endif %}

	</div>
	</div>

{% endblock %}