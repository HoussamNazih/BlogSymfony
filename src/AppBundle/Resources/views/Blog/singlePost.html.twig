
{% extends 'base.html.twig' %}

{% block body %}
<article>

<!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{ post.titre }}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{ post.Auteur}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{ post.published | date('H:i') }}</p>

          <hr>

          <!-- Preview Image  --> 
          <img class="img-fluid rounded" src="{{asset('uploads/images/' ~ post.image )}}">

          <hr>

          <!-- Post Content -->
                  <p>{{ post.contenu | raw}}</p>

          <hr>
          


          <!-- Comments Form -->



        {# {{ render 'AppBundle:Comment:new' , { 'blog_id': blog.id } }} #}

          {{ render (controller('AppBundle:Comment:new')) }}  


        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

</article>

{% endblock %}



    