
{% extends 'base.html.twig' %}

{% block body %}
<article>

<!-- Page Content -->


        <!-- Post Content Column -->

          <!-- Title -->
          <h1 class="mt-4">{{ post.titre }}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{ post.Auteur}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{ post.published | date('H:i') }}</p>

          <hr>

          <!-- Preview Image  --> 
          <img class="img-fluid rounded" src="{{asset('uploads/images/' ~ post.image )}}">

          <hr>

          <!-- Post Content -->
                  <p>{{ post.contenu | raw}}</p>

          <hr>
          


         <div class="card my-4">
            <h5 class="card-header">Ajouter un commentaire</h5>
            <div class="card-body">
              <form action="/newComment">
                <div class="form-group">
                  <textarea name="contenu" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                  <input name="blogid" class="form-control" value ={{post.id}} type="hidden"  required="required" ></input>
                </div>
                <button type="submit" class="btn btn-primary">Commenter</button>
              </form>
            </div>
          </div>

  


        {# {{ render 'AppBundle:Comment:new' , { 'blog_id': blog.id } }} #}



 {% for comment in post.getComments() %}



        <div class="col-sm-15">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
                    </div>
                  <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b>{{comment.auteur}}</b></a>
                        </div>
              <h5 class="mt-0"></h5> <p>  <time datetime="{{ comment.published|date('c') }}">{{ comment.published|date('l, F j, Y') }}</time></p>
                        <h6 class="text-muted time"></h6>
                    </div>
                </div> 
              <div class="post-description"> 
                    <p>{{comment.contenu}}</p>
                   
                </div>
            </div>
        </div>
        <br>

            {% endfor %}



<br>
<br>
<br>

</article>

{% endblock %}



    